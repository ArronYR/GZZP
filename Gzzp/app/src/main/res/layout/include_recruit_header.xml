<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header_root"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/teal_400"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_padding_xxl"
            android:paddingRight="@dimen/margin_padding_xxl">

            <TextView
                android:id="@+id/tv_type"
                style="@style/text_white_bigger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/recruit_gzzp"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="@dimen/margin_padding_s"
                android:src="@drawable/icon_arrow_down" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>