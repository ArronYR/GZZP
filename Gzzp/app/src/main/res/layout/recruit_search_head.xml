<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/grey_200"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_padding_m"
        android:paddingLeft="@dimen/margin_padding_l"
        android:paddingRight="@dimen/margin_padding_l"
        android:paddingTop="@dimen/margin_padding_m">

        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_radius"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/nothing"
                android:hint="@string/search_hit"
                android:paddingEnd="@dimen/margin_padding_l"
                android:paddingStart="@dimen/margin_padding_l"
                android:singleLine="true"
                android:textColor="@color/teal_400"
                android:textColorHint="@color/text_cc_grey"
                android:textSize="@dimen/text_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding_l"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_clear"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_clear"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_m"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_search_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icon_search_active"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>